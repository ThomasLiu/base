mixin menu(menus)
    nav.navbar.navbar-default
        .container-fluid
            .navbar-header
                a.navbar-brand(href='/') 首页
            .collapse.navbar-collapse
                ul.nav.navbar-nav
                    each menuLi in menus
                        li
                            a(href='#{menuLi.href}') #{menuLi.name}
                ul.nav.navbar-nav.navbar-right
                    li.dropdown
                        a.dropdown-toggle(href="#",class="dropdown-toggle",data-toggle="dropdown",role="button",aria-haspopup="true",aria-expanded="false") 设置
                            span.caret
                        ul.dropdown-menu
                            li
                                a(href="/signout") 退出

